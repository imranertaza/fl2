									</div>
									<div class="col-sm-3">
										<input type="text" name="gallerysetting_popup_height" value="{{ gallerysetting_popup_height }}" placeholder="{{ entry_height }}" class="form-control" />
									</div>
								</div>
							</div>
						</div>
						<div class="form-group required">
							<label class="col-sm-2 control-label" for="input-thumb-popup-width">{{ entry_thumb_popup }}</label>
							<div class="col-sm-10">
								<div class="row">
									<div class="col-sm-3">
										<input type="text" name="gallerysetting_thumb_width" value="{{ gallerysetting_thumb_width }}" placeholder="{{ entry_width }}" id="input-thumb-popup-width" class="form-control" />
									</div>
									<div class="col-sm-3">
										<input type="text" name="gallerysetting_thumb_height" value="{{ gallerysetting_thumb_height }}" placeholder="{{ entry_height }}" class="form-control" />
									</div>
								</div>
							</div>
						</div>	
						<div class="form-group required">
							<label class="col-sm-2 control-label" for="input-gallery-popup-width">{{ entry_gallery_popup }}</label>
							<div class="col-sm-10">
								<div class="row">
									<div class="col-sm-3">
										<input type="text" name="gallerysetting_gallery_width" value="{{ gallerysetting_gallery_width }}" placeholder="{{ entry_width }}" id="input-gallery-popup-width" class="form-control" />
									</div>
									<div class="col-sm-3">
										<input type="text" name="gallerysetting_gallery_height" value="{{ gallerysetting_gallery_height }}" placeholder="{{ entry_height }}" class="form-control" />
									</div>
								</div>
							</div>
						</div>
						<div class="form-group required">
							<label class="col-sm-2 control-label" for="input-thumb-limtofgallery">{{ entry_limtofgallery }}</label>
							<div class="col-sm-10">
								<div class="row">
									<div class="col-sm-6">
										<input type="text" name="gallerysetting_limtofgallery" value="{{ gallerysetting_limtofgallery }}" placeholder="{{ entry_limtofgallery }}" id="input-thumb-limtofgallery" class="form-control" />
									</div>
									
								</div>
							</div>
						</div>	
			</div>
			<div class="tab-pane fade" id="tab-color">
				<div class="form-group">
                    <label class="col-sm-4 control-label" for="input-namecolor">{{ entry_namecolor }}</label>
                    <div class="col-sm-8">
                      <input type="text" name="gallerysetting_namecolor" value="{{ gallerysetting_namecolor }}"  id="input-namecolor" class="form-control color" />
                    </div>
                </div>
				<div class="form-group">
                    <label class="col-sm-4 control-label" for="input-desccolor">{{ entry_desccolor }}</label>
                    <div class="col-sm-8">
                      <input type="text" name="gallerysetting_desccolor" value="{{ gallerysetting_desccolor }}"  id="input-desccolor" class="form-control color" />
                    </div>
                </div>
				
				<div class="form-group">
                    <label class="col-sm-4 control-label" for="input-totalphotocolor">{{ entry_totalphotocolor }}</label>
                    <div class="col-sm-8">
                      <input type="text" name="gallerysetting_totalphotocolor" value="{{ gallerysetting_totalphotocolor }}"  id="input-totalphotocolor" class="form-control color" />
                    </div>
                </div>
            </div>

              <div class="tab-pane fade" id="tab-designing">
              	<div class="form-group">
					<div class="col-sm-12">
						<table id="" class="table table-striped table-bordered table-hover">
							<tbody>	
								<tr>
								<td>
                    <input type="radio" name="gallerysetting_gallerylayout" value="layout1"{% if gallerysetting_gallerylayout =='layout1' %} checked {% endif %}>
									</td>
									<td class="text-center"><img src="view/image/layout1.jpg" alt=""></td>
									<td class="text-left">Layout1</td>
								</tr>
								<tr>
									<td><input type="radio" name="gallerysetting_gallerylayout" value="layout2" {% if gallerysetting_gallerylayout =='layout2'%} checked {% endif %}></td>
									<td class="text-center"><img src="view/image/layout2.jpg" alt=""></td>
									<td class="text-left">Layout2</td>
								</tr>
								<tr>
									<td><input type="radio" name="gallerysetting_gallerylayout" value="layout3" {% if gallerysetting_gallerylayout =='layout3'%} checked {% endif %}></td>

									<td class="text-center"><img src="view/image/layout3.jpg" alt=""></td>
									<td class="text-left">Layout3</td>
								</tr>
								
							</tbody>
						</table>
					</div>
				 </div>

            	
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="view/javascript/colorbox/jquery.minicolors.js"></script>
<link rel="stylesheet" href="view/stylesheet/jquery.minicolors.css">
<script>
		$(document).ready( function() {
			
            $('.color').each( function() {
               		$(this).minicolors({
					control: $(this).attr('data-control') || 'hue',
					defaultValue: $(this).attr('data-defaultValue') || '',
					inline: $(this).attr('data-inline') === 'true',
					letterCase: $(this).attr('data-letterCase') || 'lowercase',
					opacity: $(this).attr('data-opacity'),
					position: $(this).attr('data-position') || 'bottom left',
					change: function(hex, opacity) {
						if( !hex ) return;
						if( opacity ) hex += ', ' + opacity;
						try {
							console.log(hex);
						} catch(e) {}
					},
					theme: 'bootstrap'
				});
                
            });
			
		});
</script>
