{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid"> {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
          
          <div class="form-group required">
            <label class="col-sm-2 control-label">{{ entry_offcc_heading }}</label>
            <div class="col-sm-10">
              {% for language in languages %}
              <div class="input-group"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                <input type="text" name="payment_offcc[{{ language.language_id }}][heading]" value="{{ payment_offcc[language.language_id] ? payment_offcc[language.language_id].heading }}" placeholder="{{ entry_offcc_heading }}" class="form-control" />
              </div>
              {% if error_heading[language.language_id] %}
              <div class="text-danger">{{ error_heading[language.language_id] }}</div>
              {% endif %}
              {% endfor %}
            </div>
          </div>

          <div class="form-group required">
              <label class="col-sm-2 control-label">{{ entry_offcc_card_number }}</label>
              <div class="col-sm-10">
                {% for language in languages %}
                <div class="input-group"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                  <input type="text" name="payment_offcc[{{ language.language_id }}][card_number]" value="{{ payment_offcc[language.language_id] ? payment_offcc[language.language_id].card_number }}" placeholder="{{ entry_offcc_card_number }}" class="form-control" />
                </div>
                {% if error_card_number[language.language_id] %}
                <div class="text-danger">{{ error_card_number[language.language_id] }}</div>
                {% endif %}
                {% endfor %}
              </div>
          </div>

          <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_offcc_error_card_number }}</label>
              <div class="col-sm-10">
                {% for language in languages %}
                <div class="input-group"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                  <input type="text" name="payment_offcc[{{ language.language_id }}][error_card_number]" value="{{ payment_offcc[language.language_id] ? payment_offcc[language.language_id].error_card_number }}" placeholder="{{ entry_offcc_error_card_number }}" class="form-control" />
                </div>
                {% endfor %}
              </div>
          </div>

          <div class="form-group required">
              <label class="col-sm-2 control-label">{{ entry_offcc_cvc }}</label>
              <div class="col-sm-10">
                {% for language in languages %}
                <div class="input-group"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                  <input type="text" name="payment_offcc[{{ language.language_id }}][cvc]" value="{{ payment_offcc[language.language_id] ? payment_offcc[language.language_id].cvc }}" placeholder="{{ entry_offcc_cvc }}" class="form-control" />
                </div>
                {% if error_cvc[language.language_id] %}
                <div class="text-danger">{{ error_cvc[language.language_id] }}</div>
                {% endif %}
                {% endfor %}
              </div>
          </div>

          <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_offcc_error_cvc }}</label>
              <div class="col-sm-10">
                {% for language in languages %}
                <div class="input-group"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                  <input type="text" name="payment_offcc[{{ language.language_id }}][error_cvc]" value="{{ payment_offcc[language.language_id] ? payment_offcc[language.language_id].error_cvc }}" placeholder="{{ entry_offcc_error_cvc }}" class="form-control" />
                </div>
                {% endfor %}
              </div>
          </div>

          <div class="form-group required">
              <label class="col-sm-2 control-label">{{ entry_offcc_card_owner }}</label>
              <div class="col-sm-10">
                {% for language in languages %}
                <div class="input-group"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                  <input type="text" name="payment_offcc[{{ language.language_id }}][card_owner]" value="{{ payment_offcc[language.language_id] ? payment_offcc[language.language_id].card_owner }}" placeholder="{{ entry_offcc_card_owner }}" class="form-control" />
                </div>
                {% if error_card_owner[language.language_id] %}
                <div class="text-danger">{{ error_card_owner[language.language_id] }}</div>
                {% endif %}
                {% endfor %}
              </div>
          </div>

          <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_offcc_error_card_owner }}</label>
              <div class="col-sm-10">
                {% for language in languages %}
                <div class="input-group"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                  <input type="text" name="payment_offcc[{{ language.language_id }}][error_card_owner]" value="{{ payment_offcc[language.language_id] ? payment_offcc[language.language_id].error_card_owner }}" placeholder="{{ entry_offcc_error_card_owner }}" class="form-control" />
                </div>
                {% endfor %}
              </div>
          </div>

          <div class="form-group required">
              <label class="col-sm-2 control-label">{{ entry_offcc_expiry_date }}</label>
              <div class="col-sm-10">
                {% for language in languages %}
                <div class="input-group"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                  <input type="text" name="payment_offcc[{{ language.language_id }}][expiry_date]" value="{{ payment_offcc[language.language_id] ? payment_offcc[language.language_id].expiry_date }}" placeholder="{{ entry_offcc_expiry_date }}" class="form-control" />
                </div>
                {% if error_expiry_date[language.language_id] %}
                <div class="text-danger">{{ error_expiry_date[language.language_id] }}</div>
                {% endif %}
                {% endfor %}
              </div>
          </div>

          <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_offcc_error_expiry_date }}</label>
              <div class="col-sm-10">
                {% for language in languages %}
                <div class="input-group"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                  <input type="text" name="payment_offcc[{{ language.language_id }}][error_expiry_date]" value="{{ payment_offcc[language.language_id] ? payment_offcc[language.language_id].error_expiry_date }}" placeholder="{{ entry_offcc_error_expiry_date }}" class="form-control" />
                </div>
                {% endfor %}
              </div>
          </div>

          <div class="form-group required">
              <label class="col-sm-2 control-label">{{ entry_offcc_card_type }}</label>
              <div class="col-sm-10">
                {% for language in languages %}
                <div class="input-group"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                  <input type="text" name="payment_offcc[{{ language.language_id }}][card_type]" value="{{ payment_offcc[language.language_id] ? payment_offcc[language.language_id].card_type }}" placeholder="{{ entry_offcc_card_type }}" class="form-control" />
                </div>
                {% if error_card_type[language.language_id] %}
                <div class="text-danger">{{ error_card_type[language.language_id] }}</div>
                {% endif %}
                {% endfor %}
              </div>
          </div>

          <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_offcc_error_card_type }}</label>
              <div class="col-sm-10">
                {% for language in languages %}
                <div class="input-group"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                  <input type="text" name="payment_offcc[{{ language.language_id }}][error_card_type]" value="{{ payment_offcc[language.language_id] ? payment_offcc[language.language_id].error_card_type }}" placeholder="{{ entry_offcc_error_card_type }}" class="form-control" />
                </div>
                {% endfor %}
              </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_offcc_extra_description }}</label>
            <div class="col-sm-10">

              <ul class="nav nav-tabs" id="language">
                {% for language in languages %} 
                {% if loop.index0 == 0 %}
                <li class="active"><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
                {% else %}
                <li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
                {% endif %}
                {% endfor %}
              </ul>

              <div class="tab-content">
                  {% for language in languages %}
                  {% if loop.index0 == 0 %}
                  <div class="tab-pane active" id="language{{ language.language_id }}">
                  {% else %}
                  <div class="tab-pane" id="language{{ language.language_id }}">
                  {% endif %}
                    <div class="form-group required">
                      <div class="col-sm-12">
                        <textarea name="payment_offcc[{{ language.language_id }}][description]" placeholder="{{ entry_description }}" id="input-description{{ language.language_id }}" data-toggle="summernote" data-lang="{{ summernote }}" class="form-control">{{ payment_offcc[language.language_id] ? payment_offcc[language.language_id].description }}</textarea>
                        {% if error_description[language.language_id] %}
                        <div class="text-danger">{{ error_description[language.language_id] }}</div>
                        {% endif %} </div>
                    </div>
                  </div>
                  {% endfor %}
              </div>
              
            </div>
          </div>

          <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_allow_card }}</label>
              <div class="col-sm-10">
                <div class="well well-sm" style="height: 150px; overflow: auto;"> {% for key,all_card_type in all_card_types %}
                  <div class="checkbox">
                    <label> {% if all_card_type in payment_offcc_card_types %}
                      <input type="checkbox" name="payment_offcc_card_types[{{ key }}]" value="{{ all_card_type }}" checked="checked" />
                      {{ all_card_type }}
                      {% else %}
                      <input type="checkbox" name="payment_offcc_card_types[{{ key }}]" value="{{ all_card_type }}" />
                      {{ all_card_type }}
                      {% endif %} </label>
                  </div>
                  {% endfor %}</div>
              </div>
            </div>
            
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip" title="{{ help_total }}">{{ entry_total }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_offcc_total" value="{{ payment_offcc_total }}" placeholder="{{ entry_total }}" id="input-total" class="form-control" />
            </div>
          </div>


          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status }}</label>
            <div class="col-sm-10">
              <select name="payment_offcc_order_status_id" id="input-order-status" class="form-control">
                
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_offcc_order_status_id %}
                
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                
                {% else %}
                
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                
                {% endif %}
                {% endfor %}
              
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
            <div class="col-sm-10">
              <select name="payment_offcc_geo_zone_id" id="input-geo-zone" class="form-control">
                <option value="0">{{ text_all_zones }}</option>
                {% for geo_zone in geo_zones %}
                {% if geo_zone.geo_zone_id == offcc_geo_zone_id %}
                <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                {% else %}
                <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                {% endif %}
                {% endfor %}
              
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_offcc_status" id="input-status" class="form-control">
                
                {% if payment_offcc_status %}
                
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                
                {% else %}
                
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                
                {% endif %}
              
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_offcc_sort_order" value="{{ payment_offcc_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="view/javascript/summernote/summernote.js"></script>
<link href="view/javascript/summernote/summernote.css" rel="stylesheet" /> 
<script type="text/javascript" src="view/javascript/summernote/opencart.js"></script> 
{{ footer }}