<div class="common-home">
    <h3 class="box-heading"><span>{{ heading_title }}</span>
    <div class="pull-right viewall">
        <a href="index.php?route=extension/gallery">{{ text_viewall }}</a>
    </div>
    </h3>
<div class="box-content row">
	<div class="box-product">
		<div class="gallery_row">
		{% if carousel==1 %}
          <div class="galle owl-carousel">
			{% if gallerys %}
              {% for gallery in gallerys %}
				<div class="product-grid-item xs-100 sm-100 md-100 lg-100 xl-100 display-both block-button">
					<div class="gallary product-wrapper">
					<div class="images">
				    	<a href="{{ gallery.href }}">
				        {% if gallery.image %}
				<img class="img-responsive" src="{{ gallery.image }}"/>
					 	{% endif %}
							</a>
					
						<div class="texthover" onclick="top.location.href='{{ gallery.href }}'">	
								<a class="name" href="{{ gallery.href }}"><span>{{ gallery.album }}</span></a>
								<span class="description"><p>{{ gallery.description }}</p></span>
								<p class="totalphoto">{{ gallery.totalphoto }}  {{ text_photos }}</p>
							</div>
						</div>
					</div>
				</div>
			  {% endfor %}
			 {% endif %}
			</div>
		{% else %}		
		
		<div class="galle homegallery">
          {% if gallerys %}
			{% for gallery in gallerys %}
				<div class="product-grid-item xs-100 sm-50 md-33 lg-25 xl-25 display-both block-button">
					<div class="gallary product-wrapper">
						<div class="images">
				   <a href="{{ gallery.href }}">
				  {% if gallery.image %}
								<img class="img-responsive" src="{{ gallery.image }}"/>
					 			{% endif %}
							</a>
					
						<div class="texthover" onclick="top.location.href='{{ gallery.href }}'">	
								<a class="name" href="{{ gallery.href }}"><span>{{ gallery.album }}</span></a>
								<span class="description"><p>{{ gallery.description }}</p></span>
								<p class="totalphoto">{{ gallery.totalphoto }} {{ text_photos }}</p>
							</div>
						</div>
					</div>
				</div>
				{% endfor %}
				{% endif %}
			</div>					
			{% endif %}
		</div>
	</div>
</div>
{% if carousel==1 %}
<script type="text/javascript"><!--
$('.galle').owlCarousel({
	items: 4,
	autoPlay: false,
	navigation: true,
	navigationText: ['<i class="fa fa-chevron-left fa-5x"></i>', '<i class="fa fa-chevron-right fa-5x"></i>'],
	pagination: false
});

--></script>
{% endif %}
